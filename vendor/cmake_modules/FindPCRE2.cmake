find_library(PCRE2_LIBRARY NAMES pcre2 pcre2-8)
find_path(PCRE2_INCLUDE_DIR pcre2.h)
if(PCRE2_LIBRARY AND PCRE2_INCLUDE_DIR)
  message(STATUS "PCRE2 libs: ${PCRE2_LIBRARY}")
  message(STATUS "PCRE2 include directory: ${PCRE2_INCLUDE_DIR}")
  set(PCRE2_FOUND TRUE CACHE BOOL "Found PCRE2 libraries" FORCE)
